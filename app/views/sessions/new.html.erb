<section class="bg-dark" id="login_admin">

	<div class="container d-flex justify-content-center align-items-center">
		<div class="card card-login">
			<div class="card-header">Login</div>

			<div class="card-body">
				<%= simple_form_for(:login, url: :sessions, method: :post) do |f| %>
					<%= f.input :email, as: :email, label: false, class:"form-control", placeholder:"E-mail" %>
					<%= f.input :password, as: :password, label: false, class:"form-control", placeholder:"Password" %>
					<div class="d-flex justify-content-center">
						<%= f.button :button, class:"btn btn-primary", style:"width: 100%;" do %>
							Login
						<% end %>
					</div>
				<% end %>
				<a class="d-block small" href="forgot-password.html" style="text-align: left">Esqueceu a senha ?</a>
			</div>

		</div>
	</div>

</section>
