<!DOCTYPE html>
<html>

  <head>
    <title>Iredevs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag 'entity', media: 'all' %>
    <%= stylesheet_link_tag 'entity/_variables', media: 'all' %>
    <%= stylesheet_link_tag 'entity/style', media: 'all' %>

    <%= javascript_include_tag 'company' %>
  </head>

  <body id="institution_profile">
    <%= render partial: "layouts/notification/flash_messages" %>
    <%= render partial:"layouts/frontend/nav"%>
    <div class="page">
      <!-- Left Panel -->
      <aside id="left-panel" class="left-panel">
          <nav class="navbar navbar-expand-sm navbar-default">

              <div class="navbar-header d-flex justify-content-left">
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                      <i class="fa fa-bars"></i>
                  </button>
                  <%= (image_tag current_institution.logo.url(:tiny), class:"img-fluid logo-tiny-institution") unless current_institution.logo.blank? %>
              </div>

              <div id="main-menu" class="main-menu collapse navbar-collapse">
                  <ul class="nav navbar-nav">
                      <li class="name_institution">
                        <p><%= current_institution.name %></p>
                      </li>
                      <h3 class="menu-title">Ações</h3><!-- /.menu-title -->
                      <li class="menu-item">
                        <%= link_to root_path do %>
                          <i class="menu-icon material-icons md-18">home</i>Início
                        <% end %>
                      </li>
                      <li class="menu-item">
                          <%= link_to entity_publications_path, method: "get" do %>
                            <i class="menu-icon material-icons md-18">subject</i>Publicações
                          <% end %>
                      </li>

                      <h3 class="menu-title">Informações</h3><!-- /.menu-title -->

                      <li class="menu-item-has-children dropdown">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon material-icons md-18">business</i>Instituição</a>
                          <ul class="sub-menu children dropdown-menu">
                            <li class="menu-icon">
                              <i class="menu-icon material-icons md-18">chrome_reader_mode</i>
                              <%= link_to entity_institution_profile_path do %>
                                <i></i>Perfil
                              <% end %>
                            </li>
                            <li class="menu-icon">
                              <i class="menu-icon material-icons md-18">insert_photo</i>
                              <%= link_to entity_update_institution_cover_path, method: "get" do %>
                                <i></i>Foto de capa
                              <% end %>
                            </li>
                            <li class="menu-icon">
                              <i class="menu-icon material-icons md-18">place</i>
                              <%= link_to entity_institution_location_path, method: "get" do %>
                                 Seu local
                              <% end %>
                            </li>
                          </ul>
                      </li>
                      <h3 class="menu-title">Segurança</h3><!-- /.menu-title -->
                      <li class="menu-item-has-children dropdown">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon material-icons md-18">lock</i>Senha</a>
                          <ul class="sub-menu children dropdown-menu">
                            <li class="menu-icon">
                              <i class="menu-icon material-icons md-18">lock_open</i>
                              <%= link_to entity_update_institution_password_path do %>
                                <i></i>Alterar senha
                              <% end %>
                            </li>
                          </ul>
                      </li>
                      <h3 class="menu-title">Mais</h3>
                      <li class="menu-item">
                        <%= link_to logout_session_institution_path do %>
                          <i class="menu-icon material-icons md-18">exit_to_app</i>Sair
                        <% end %>
                      </li>
                  </ul>
              </div><!-- /.navbar-collapse -->
          </nav>
      </aside><!-- /#left-panel -->
      <!-- Left Panel -->


      <!-- Right Panel -->
      <div id="right-panel" class="right-panel">
          <div class="content mt-3">
            <%= yield %>
          </div>
      </div><!-- /#right-panel -->

    </div><!-- /#end page -->
  </body>
</html>
