<section id="update_user_skill" class="d-flex d-flex align-items-center" style="height: 100vh">
  <div class="container d-flex justify-content-center align-items-center" style="padding: 0px">
    <div class="row d-flex justify-content-center" style="width: 100%">
      <div class="col-md-10 div-skills">
        <p>Adicione aqui suas habilidades</p>
        <%= simple_form_for @model, url: frontend_update_user_skill_path do |f| %>
          <div class="new">
            <div class="new_skill">
              <div class="link_add">
                <%= link_to_add_association "Adicionar", f, :skills, style:"background: #42A5F5; padding: 5px; color: white;" %>
              </div>
            </div>
          </div>

          <div class="skills" style="width: 100%;">
            <div class="row">
              <%= f.simple_fields_for :skills do |skill| %>
                <div class="col-6 col-sm-4 col-md-3 col-xl-3">
                  <%= render 'skill_fields', f: skill %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <%= button_tag(class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Salvando..."}) do %>
              <div class="d-flex">
                <span class="material-icons" style="">check</span>
                <span style="margin-left: 5px">Salvar</span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
