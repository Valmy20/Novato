<section id="user_profile">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-10">
          <div>
            <a class="bg"></a>
          	<div>
          		<div class="edit-button">
                  <%= link_to frontend_user_profile_path, class:"btn btn-info" do %>
                    Editar
                  <% end %>
          		</div>
          		<span class="avatar-img">
          			<%= (image_tag @model.avatar.url(:thumb), class:"img-fluid") unless @model.avatar.blank? %>
          		</span>

          		<div class="divUser">
          			<div class="divName">
          				<%= @model.name unless @model.name.blank?%>
          			</div>
          			<div class="info">
                  <div class="email">
                    e-mail
                    <p><%= @model.email unless @model.email.blank?%></p>
                  </div>
                  <div class="contact">
                    telefone
                    <p><%= @model.user_extra.phone unless @model.user_extra.blank?%></p>
                  </div>
          			</div>
          		</div>
          	</div>
          </div>
      </div>
    </div>
    <section class="skills-info">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-6">
                <h3>Sobre mim</h3>
                  <%= @model.user_extra.bio unless @model.user_extra.blank?%>
              </div>
              <div class="col-md-6">
                <h3>Habilidades</h3>
                  <%= @model.user_extra.skill unless @model.user_extra.blank?%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</section>
