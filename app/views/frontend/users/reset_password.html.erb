<section class="medium-top" style="min-height: 100vh; background: #ECEFF1; padding-top: 100px;">
		<div class="container">
			<div class='row'>
				<div class="col-lg-6 offset-lg-3">

          <% unless flash[:notice] %>
          	<% if flash[:alert] %>
    					<p class='error medium-bottom blink'><%= flash[:alert] %></p>
            <% end %>

            <%= simple_form_for(:user, url: :user_reset_password, method: :post) do |f| %>

							<div class="custon_field left-addon" style="margin-top: 30px">
								<div class="icon">
									<i class="material-icons" style="color: white;">email</i>
								</div>
								<%= f.input :email, label: false, placeholder:"digite seu e-mail", class:"form-control" %>
							</div>
      				<center>
      					<%= f.button :button, class: 'btn btn-primary medium-top  btn-custom', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Aguarde..."} do %>
      						Enviar
      					<% end %>
      				</center>
      			<% end %>

          <% else %>
            <p class='success medium-bottom blink'><%= flash[:notice] %></p>
          <% end %>
				</div>
			</div>
		</div>
	</section>
