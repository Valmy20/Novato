<%= simple_form_for @model, url: frontend_user_profile_path do |f| %>
  <%= f.input :name, label: 'Nome' %>
  <%= f.input :email, label: 'Email' %>
  <%= f.simple_fields_for :user_extra do |extra| %>
    <%= extra.input :bio %>
    <%= extra.input :skill, label: 'Habilidades' %>
    <%= extra.input :phone, input_html: {class: 'phone'}, label: 'Telefone' %>
  <% end %>
  <%= f.input :password_current, as: :password, label: "Senha atual" %>
  <%= f.input :new_password, as: :password, label: "Nova senha"%>
  <%= f.input :new_password_confirmation, as: :password, label: "Confirmar nova senha"%>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
