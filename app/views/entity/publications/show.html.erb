<form>
  <div class="form-group">
    <label>Título do estágio</label>
    <input type="text" class="form-control" placeholder="<%= @model.title %>" disabled>
  </div>
  <div class="form-group">
    <label>remuneração</label>
    <input type="text" class="form-control" placeholder="<%= @model.remunaration %>" disabled>
  </div>
  <div class="form-group">
    <label>Informações adicionais</label>
    <%= simple_form_for([:entity, @model], multpart: true) do |f|%>
      <%= f.input :information, label: false, as: :ckeditor, input_html: { ckeditor: { height: 300 } }, disabled: true  %>
    <% end %>
  </div>
</form>
