<section>
  <div class="container">
    <div class="row">
      <div class="col-md-10">
        <%= simple_form_for @model, url: entity_update_institution_password_path do |f| %>
          <div>
            <%= f.input :password_current, as: :password, label: "Senha atual" %>
            <%= f.input :new_password, as: :password, label: "Nova senha"%>
            <%= f.input :new_password_confirmation, as: :password, label: "Confirmar nova senha"%>
          </div>
          <%= button_tag(class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Salvando..."}) do %>
            <div class="d-flex">
              <span class="material-icons" style="">check</span>
              <span style="margin-left: 5px">Salvar</span>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>
