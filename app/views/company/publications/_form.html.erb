<%= simple_form_for([:company, @model]) do |f|%>
  <div class="input_title">
    <%= f.input :title, label:"Título da vaga" %>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="input_type">
        <%= f.input :_type, collection: Publication._types.keys, label:"Tipo da vaga" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="input_vacancies">
        <%= f.input :vacancies, label:"Quantidade de vagas" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="input_remunaration">
        <%= f.input :remunaration, label:"Remuneração" %>
        <span style="color: #B0BEC5; position: relative; top: -18px; font-size: 13px">caso não tenha, ou não queira informar, deixe em branco</span>
      </div>
    </div>
  </div>
  <%= f.input :information, label:"Informações adicionais: mínimo de 100 caracteres", as: :ckeditor, input_html: { ckeditor: { height: 150 } } %>

  <%= button_tag(class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Salvando..."}) do %>
    <div class="d-flex">
      <span class="material-icons" style="">check</span>
      <span style="margin-left: 5px">Salvar</span>
    </div>
  <% end %>

<% end %>
