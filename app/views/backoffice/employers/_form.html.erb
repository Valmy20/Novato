<form>
  <div class="row">
    <div class="col-md-7">
      <div class="form-group">
        <label>Nome</label>
        <input class="form-control" placeholder="<%= @model.name %>" disabled >
      </div>
      <div class="form-group">
        <label>Email</label>
        <input class="form-control" placeholder="<%= @model.email %>" disabled >
      </div>
      <div class="form-group">
        <label>Telefone</label>
        <input class="form-control" placeholder="<%= @model.employer_extra.phone %>" disabled >
      </div>
      <div class="form-group">
        <label>Informações adicionais</label>
        <textarea name="name" class="form-control" rows="5" cols="70" disabled ><%= @model.employer_extra.about %>
        </textarea>
      </div>
    </div>
    <div class="col-md-5">
      <% if @model.employer_extra.location.present? %>
        <div id="map" style="height: 300px; width: 100%; border: 2px solid #CFD8DC;"></div>
      <% end %>
    </div>
  </div>

</form>

<script src='https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_KEY'] %>'></script>
 <script type='text/javascript'>

  function initialize() {

    navigator.geolocation.getCurrentPosition(function(location) {
      var lat = location.coords.latitude;
      var lng = location.coords.longitude;

      "<% if @model.employer_extra.location.present? %>"
        var my_position = new google.maps.LatLng(<%= @model.employer_extra.place_pin %>);
      "<% else %>"
        var my_position = new google.maps.LatLng(lat,lng);
        var input = document.getElementById('input_id');
        input.value =  lat + ", " + lng;
      "<% end %>"

      var map = new google.maps.Map(document.getElementById('map'), {
          center: my_position,
          zoom: 15
      });
      var marker = new google.maps.Marker({
          position: my_position,
          map: map
      });

    });

  }
  google.maps.event.addDomListener(window, 'load', initialize);
 </script>
