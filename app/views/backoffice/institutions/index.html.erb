<section class="backoffice">
  <div class="d-flex justify-content-start">
    <h3 class="badge badge-secondary" style="font-size: 22px">Instituições de ensino</h3>
  </div>
  <table class="table table_margin">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>
          Status
        </th>
        <th class="d-flex justify-content-end">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @model.each do |institution| %>
        <tr>
          <td class="column_id" ><%= institution.id %></td>
          <td><%= truncate(institution.name, length: 25) %></td>
          <td><%= helper_status_enum(institution) %>
            <%= link_to backoffice_update_institution_status_path(institution.id), method: :post,
                class:"btn btn-secondary", style:"padding: 0px 5px 0px;" do %>
                <div class="d-flex">
                  <span class="material-icons md-18" style="color: white">create</span>
                </div>
            <% end %>
          </td>
          <td class="d-flex justify-content-end btn-actions">
            <%= link_to backoffice_institution_path(institution.id), method:"get", class:"btn btn-primary btn_custom" do %>
              <div class="d-flex">
                <span class="material-icons" style="color: white">remove_red_eye</span>
              </div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @model %>
  </div>
</section>
