<form>
  <div class="form-group">
    <label>Nome</label>
    <input class="form-control" placeholder="<%= @model.name %>" disabled >
  </div>
  <div class="form-group">
    <label>Email</label>
    <input class="form-control" placeholder="<%= @model.email %>" disabled >
  </div>
  <div class="form-group">
    <label>Telefone</label>
    <input class="form-control" placeholder="<%= @model.user_extra.phone %>" disabled >
  </div>
  <div class="form-group">
    <label>Bio</label>
    <textarea name="name" class="form-control" rows="5" cols="70" disabled ><%= @model.user_extra.bio %>
    </textarea>
  </div>
  <div class="form-group">
    <label>Habilidades</label>
    <textarea name="name" class="form-control" rows="3" cols="70" disabled ><%= @model.user_extra.skill %>
    </textarea>
  </div>
</form>
