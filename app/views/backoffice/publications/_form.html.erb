<form>
  <div class="form-group">
    <label>Postado por:</label>
    <% type = @model.publicationable_type %>
    <% id = @model.publicationable_id %>
    <input type="text" class="form-control" placeholder="<%= who_create_publication(type, id) %>" disabled>
  </div>
  <div class="form-group">
    <label>Título</label>
    <input type="text" class="form-control" placeholder="<%= @model.title %>" disabled>
  </div>
  <div class="form-group">
    <label>Tipo</label>
    <input type="text" class="form-control" placeholder="<%= @model._type %>" disabled>
  </div>
  <div class="form-group">
    <label>Vagas</label>
    <input type="text" class="form-control" placeholder="<%= @model.vacancies %>" disabled>
  </div>
  <div class="form-group">
    <label>Remuneração</label>
    <input type="text" class="form-control" placeholder="<%= @model.remunaration %>" disabled>
  </div>
  <div class="form-group">
    <label>Informações adicionais</label>
    <%= simple_form_for([:company, @model], multpart: true) do |f|%>
      <%= f.input :information, label: false, as: :ckeditor, input_html: { ckeditor: { height: 1000 } }, disabled: true  %>
    <% end %>
  </div>
</form>
