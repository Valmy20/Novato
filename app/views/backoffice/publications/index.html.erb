<section class="backoffice">
  <div class="d-flex justify-content-start">
    <h3 class="badge badge-secondary" style="font-size: 22px">Vagas Publicadas</h3>
  </div>
  <table class="table table_margin">
    <thead>
      <tr>
        <th>ID</th>
        <th>Título da vaga</th>
        <th>
          Status
        </th>
        <th class="d-flex justify-content-end">Informações</th>
      </tr>
    </thead>
    <tbody>
      <% @model.each do |row| %>
        <tr>
          <td class="column_id" ><%= row.id %></td>
          <td><%= truncate(row.title, length: 25) %></td>
          <td><%= helper_status_publication(row) %>
            <%= link_to backoffice_update_publication_status_path(row.id), method: :get,
                class:"btn btn-secondary", style:"padding: 0px 5px 0px;" do %>
                <div class="d-flex">
                  <span class="material-icons md-18" style="color: white" title="alterar status">create</span>
                </div>
            <% end %>
          </td>
          <td class="d-flex justify-content-end btn-actions">
            <%= link_to backoffice_publication_path(row), method:"get", class:"btn btn-primary btn_custom" do %>
              <div class="d-flex">
                <span class="material-icons" style="color: white">remove_red_eye</span>
              </div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @model %>
  </div>
</section>
